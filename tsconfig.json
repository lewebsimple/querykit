{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
}